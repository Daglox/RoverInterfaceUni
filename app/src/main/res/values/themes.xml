<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rover_green_primary</item>
        <item name="colorPrimaryVariant">#0A0A0A</item>
        <item name="colorOnPrimary">@color/rover_green_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="BottomNavigation_Green">
        <item name="android:background">@color/green_dark</item>
        <item name="itemIconTint">@color/green_light</item>
        <item name="itemTextColor">@color/green_light</item>
    </style>

    <style name="BottomNavigation_Purple">
        <item name="android:background">@color/purple_dark</item>
        <item name="itemIconTint">@color/purple_light</item>
        <item name="itemTextColor">@color/purple_light</item>
    </style>

    <style name="myRoverButton">
        <item name="backgroundTint">@color/rover_green_primary</item>
        <item name="colorPrimaryVariant">@color/rover_green_light</item>
        <item name="colorPrimaryDark">@color/rover_green_dark</item>
        <item name="editTextBackground">@color/rover_green_primary</item>
        <item name="editTextColor">@color/rover_green_dark</item>
    </style>

    <style name="myRoverTextEdit">
        <item name="backgroundTint">@color/white</item>
        <item name="colorPrimaryVariant">@color/rover_green_light</item>
        <item name="colorPrimaryDark">@color/rover_green_dark</item>
        <item name="editTextBackground">@color/rover_green_primary</item>
        <item name="editTextColor">@color/black</item>
    </style>

    <style name="CardRoverFormat">
        <item name="android:topLeftRadius">3dp</item>
        <item name="android:bottomRightRadius">3dp</item>
    </style>

</resources>