<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passwordRecover2">

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/lively_green_rover"
        android:onClick="Password_Recover_3_Activity"
        android:text="OK"
        android:textColor="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCode3" />

    <ImageView
        android:id="@+id/imgUpBackground3"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/first_layout" />

    <ImageView
        android:id="@+id/imgLogo3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sin_fondo" />

    <TextView
        android:id="@+id/tvPasswordRecover2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Password Recover"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUpBackground3" />

    <ImageView
        android:id="@+id/imgCont22"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordRecover2"
        app:srcCompat="@drawable/pill_figure" />

    <TextView
        android:id="@+id/tvStepTwo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont22"
        app:layout_constraintEnd_toEndOf="@+id/imgCont22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imgCont22"
        app:layout_constraintTop_toTopOf="@+id/imgCont22" />

    <ImageView
        android:id="@+id/imgCont12"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/imgCont22"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordRecover2"
        app:srcCompat="@drawable/pill_figure" />

    <ImageView
        android:id="@+id/imgCont32"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toEndOf="@+id/imgCont22"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordRecover2"
        app:srcCompat="@drawable/pill_figure" />

    <TextView
        android:id="@+id/tvStepThree2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont32"
        app:layout_constraintEnd_toEndOf="@+id/imgCont32"
        app:layout_constraintStart_toStartOf="@+id/imgCont32"
        app:layout_constraintTop_toTopOf="@+id/imgCont32" />

    <ImageView
        android:id="@+id/imgCheck11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont12"
        app:layout_constraintEnd_toEndOf="@+id/imgCont12"
        app:layout_constraintStart_toStartOf="@+id/imgCont12"
        app:layout_constraintTop_toTopOf="@+id/imgCont12"
        app:srcCompat="@drawable/ic_done" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="115dp"
        android:layout_height="23dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="Verification code"
        android:textColor="@color/soft_purple_rover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCont22" />

    <EditText
        android:id="@+id/edtCode1"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/edtCode2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/edtCode2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/edtCode3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode1"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/edtCode3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/edtCode4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode2"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/edtCode4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtCode3"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

</androidx.constraintlayout.widget.ConstraintLayout>