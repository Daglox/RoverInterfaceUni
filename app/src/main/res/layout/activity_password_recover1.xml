<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineSpotShadowColor="@color/black"
    tools:context=".passwordRecover1">

    <ImageView
        android:id="@+id/imgUpBackground2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/first_layout" />

    <TextView
        android:id="@+id/tvPasswordRecover1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Password Recover"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUpBackground2" />

    <ImageView
        android:id="@+id/imgLogo2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="@+id/imgUpBackground2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sin_fondo" />

    <ImageView
        android:id="@+id/imgCont21"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordRecover1"
        app:srcCompat="@drawable/pill_figure" />

    <ImageView
        android:id="@+id/imgCont11"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/imgCont21"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordRecover1"
        app:srcCompat="@drawable/pill_figure" />

    <ImageView
        android:id="@+id/imgCont31"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toEndOf="@+id/imgCont21"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordRecover1"
        app:srcCompat="@drawable/pill_figure" />

    <TextView
        android:id="@+id/tvStepOne1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont11"
        app:layout_constraintEnd_toEndOf="@+id/imgCont11"
        app:layout_constraintStart_toStartOf="@+id/imgCont11"
        app:layout_constraintTop_toTopOf="@+id/imgCont11" />

    <TextView
        android:id="@+id/tvStepTwo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont21"
        app:layout_constraintEnd_toEndOf="@+id/imgCont21"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imgCont21"
        app:layout_constraintTop_toTopOf="@+id/imgCont21" />

    <TextView
        android:id="@+id/tvStepThree1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont31"
        app:layout_constraintEnd_toEndOf="@+id/imgCont31"
        app:layout_constraintStart_toStartOf="@+id/imgCont31"
        app:layout_constraintTop_toTopOf="@+id/imgCont31" />

    <TextView
        android:id="@+id/tvVerificationInstruction"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="You will receive a verification code in your email"
        android:textColor="@color/soft_purple_rover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCont21" />

    <EditText
        android:id="@+id/edtBackEmail"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerificationInstruction" />

    <Button
        android:id="@+id/btnSendMail"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/lively_green_rover"
        android:onClick="Password_Recover_2_Activity"
        android:text="Send"
        android:textColor="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtBackEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>